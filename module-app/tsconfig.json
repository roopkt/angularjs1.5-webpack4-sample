{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@phoneModule/*": ["./module-app/*"],
    }
  },
  "compileOnSave": false,
  "exclude": ["./node_modules", "./dist", "./coverage", "./testresults"]
}
