{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@nodemodules/*": ["node_modules/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "compileOnSave": false,
  "include": [
    "src/app/**/*",
    "src/bootstrap.ts",
    "karma-prod.conf.js",
    "karma-dev.conf.js"
  ],
  "exclude": ["node_modules", "dist"]
}
