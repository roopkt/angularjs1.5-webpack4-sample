{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "outDir": "../out-tsc/app",
    "target": "es5",
    "module": "es2015",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@phone/*": ["../src/*"],
    }
  },
  "include": [
    "example/app/**/*",
    "example/index.ts",
    "karma-prod.conf.js",
    "karma-dev.conf.js"
  ],
  "exclude": [
    "../../node_modules",
    "**/*.spec.ts"
  ]
}